/* pages/single-card/single-card.wxss */
.single-card-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0a0a1a 100%);
  padding: 40rpx 32rpx;
}

.title-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.card-display {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.card-back {
  width: 400rpx;
  height: 560rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
}

.draw-hint {
  font-size: 32rpx;
  color: var(--text-primary);
}

.card-icon {
  font-size: 120rpx;
}

.card-result {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-visual {
  width: 360rpx;
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.card-num {
  font-size: 120rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 16rpx;
}

.card-orientation {
  padding: 8rpx 24rpx;
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  border-radius: 24rpx;
  font-size: 28rpx;
}

.card-info-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.result-card-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.result-card-name-en {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 24rpx;
  font-style: italic;
}

.keywords-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  justify-content: center;
  margin-bottom: 32rpx;
}

.keyword-tag {
  padding: 8rpx 20rpx;
  background: rgba(167, 139, 250, 0.15);
  border: 1px solid rgba(167, 139, 250, 0.3);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: var(--color-primary);
}

.meaning-section {
  width: 100%;
  padding: 32rpx;
  margin-bottom: 32rpx;
}

.meaning-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: var(--color-primary);
}

.meaning-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

.action-buttons {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.btn-primary, .btn-secondary {
  flex: 1;
  padding: 24rpx;
  border-radius: var(--radius-md);
  font-size: 32rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  color: var(--text-primary);
}

.btn-secondary {
  background: rgba(26, 26, 26, 0.6);
  border: 1px solid var(--border-color);
  color: var(--text-primary);
}

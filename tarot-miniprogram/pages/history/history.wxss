/* pages/history/history.wxss */
.history-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0a0a1a 100%);
  padding: 40rpx 32rpx;
}

.header-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.page-title {
  font-size: 48rpx;
}

.clear-btn {
  padding: 16rpx 32rpx;
  background: rgba(244, 114, 182, 0.2);
  border: 1px solid var(--color-warning);
  color: var(--color-warning);
  border-radius: var(--radius-md);
  font-size: 24rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.history-list {
  height: calc(100vh - 200rpx);
}

.history-item {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-type {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
}

.item-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.item-cards {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
}

.mini-preview {
  padding: 16rpx 24rpx;
  background: rgba(167, 139, 250, 0.1);
  border: 1px solid rgba(167, 139, 250, 0.2);
  border-radius: var(--radius-md);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.preview-num {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--color-primary);
  margin-bottom: 4rpx;
}

.preview-name {
  font-size: 20rpx;
  color: var(--text-secondary);
}

.item-actions {
  display: flex;
  justify-content: flex-end;
}

.delete-btn {
  padding: 12rpx 28rpx;
  background: transparent;
  border: 1px solid var(--border-color);
  color: var(--text-tertiary);
  border-radius: var(--radius-sm);
  font-size: 24rpx;
}

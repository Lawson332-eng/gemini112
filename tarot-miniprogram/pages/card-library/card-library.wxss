/* pages/card-library/card-library.wxss */
.card-library-page {
  background: linear-gradient(180deg, #000000 0%, #0a0a1a 100%);
  min-height: 100vh;
  padding: 24rpx;
}

.filter-section {
  margin-bottom: 24rpx;
}

.filter-tabs {
  display: flex;
  gap: 16rpx;
  background: rgba(26, 26, 26, 0.6);
  padding: 8rpx;
  border-radius: var(--radius-lg);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: var(--radius-md);
  font-size: 28rpx;
  color: var(--text-secondary);
  transition: all 0.3s;
}

.tab.active {
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  color: var(--text-primary);
  font-weight: 600;
}

.cards-grid {
  height: calc(100vh - 200rpx);
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.card-item {
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.card-placeholder {
  width: 100%;
  height: 180rpx;
  background: linear-gradient(135deg, rgba(167, 139, 250, 0.2), rgba(96, 165, 250, 0.2));
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.card-number-display {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.card-name {
  font-size: 24rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.card-name-en {
  font-size: 20rpx;
  color: var(--text-tertiary);
}

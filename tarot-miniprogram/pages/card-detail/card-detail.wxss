/* pages/card-detail/card-detail.wxss */
.card-detail-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #000000 0%, #0a0a1a 100%);
  padding: 40rpx 32rpx;
  padding-bottom: 120rpx;
}

.card-header {
  display: flex;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.card-image {
  width: 160rpx;
  height: 220rpx;
  background: linear-gradient(135deg, rgba(167, 139, 250, 0.2), rgba(96, 165, 250, 0.2));
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
}

.card-display-num {
  font-size: 72rpx;
  font-weight: 700;
  color: var(--color-primary);
}

.card-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.detail-card-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.detail-card-name-en {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  font-style: italic;
}

.card-category {
  display: inline-block;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  border-radius: 24rpx;
  font-size: 24rpx;
  align-self: flex-start;
}

.keywords-section, .meaning-section {
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: var(--color-primary);
  margin-bottom: 24rpx;
}

.keywords-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.keyword-item {
  padding: 8rpx 20rpx;
  background: rgba(167, 139, 250, 0.15);
  border: 1px solid rgba(167, 139, 250, 0.3);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: var(--color-primary);
}

.meaning-content {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.meaning-item {
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 24rpx;
  color: var(--color-secondary);
  margin-bottom: 8rpx;
  font-weight: 600;
}

.item-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: var(--text-secondary);
}

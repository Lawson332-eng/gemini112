/* app.wxss - 全局样式 */

/* 全局CSS变量定义 - 暗黑主题配色 */
page {
  /* 背景色 */
  --bg-primary: #000000;
  --bg-secondary: #0a0a0a;
  --bg-tertiary: #1a1a1a;

  /* 霓虹渐变色 */
  --color-primary: #a78bfa;      /* 紫色 */
  --color-secondary: #60a5fa;    /* 蓝色 */
  --color-accent: #34d399;       /* 青色 */
  --color-warning: #f472b6;      /* 洋红 */

  /* 文字颜色 */
  --text-primary: #ffffff;
  --text-secondary: #d1d5db;
  --text-tertiary: #9ca3af;
  --text-disabled: #6b7280;

  /* 边框颜色 */
  --border-color: rgba(167, 139, 250, 0.2);
  --border-hover: rgba(167, 139, 250, 0.4);

  /* 阴影 */
  --shadow-sm: 0 2px 8px rgba(167, 139, 250, 0.1);
  --shadow-md: 0 4px 16px rgba(167, 139, 250, 0.15);
  --shadow-lg: 0 8px 32px rgba(167, 139, 250, 0.2);
  --shadow-glow: 0 0 20px rgba(167, 139, 250, 0.3);

  /* 圆角 */
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;

  /* 间距 */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;

  /* 字体大小 */
  --font-xs: 24rpx;
  --font-sm: 28rpx;
  --font-md: 32rpx;
  --font-lg: 36rpx;
  --font-xl: 40rpx;
  --font-2xl: 48rpx;
  --font-3xl: 56rpx;
}

/* 全局重置 */
page {
  background-color: var(--bg-primary);
  color: var(--text-primary);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  font-size: var(--font-md);
  line-height: 1.6;
  height: 100%;
}

/* 清除默认样式 */
view, text, image, navigator, button {
  box-sizing: border-box;
}

/* 容器类 */
.container {
  padding: var(--spacing-md);
  min-height: 100vh;
  background: var(--bg-primary);
}

.container-fluid {
  width: 100%;
  min-height: 100vh;
  background: var(--bg-primary);
}

/* 毛玻璃效果卡片 */
.glass-card {
  background: rgba(26, 26, 26, 0.6);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid var(--border-color);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  transition: all 0.3s ease;
}

.glass-card:active {
  transform: translateY(2px);
  box-shadow: var(--shadow-sm);
}

/* 渐变文字 */
.gradient-text {
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
}

/* 渐变按钮 */
.gradient-btn {
  background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
  color: var(--text-primary);
  border: none;
  border-radius: var(--radius-md);
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: var(--font-md);
  font-weight: 500;
  box-shadow: var(--shadow-glow);
  transition: all 0.3s ease;
}

.gradient-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 发光效果 */
.glow {
  box-shadow: var(--shadow-glow);
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 文本样式 */
.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-tertiary {
  color: var(--text-tertiary);
}

/* 字体大小 */
.text-xs {
  font-size: var(--font-xs);
}

.text-sm {
  font-size: var(--font-sm);
}

.text-md {
  font-size: var(--font-md);
}

.text-lg {
  font-size: var(--font-lg);
}

.text-xl {
  font-size: var(--font-xl);
}

.text-2xl {
  font-size: var(--font-2xl);
}

.text-3xl {
  font-size: var(--font-3xl);
}

/* 字体粗细 */
.font-light {
  font-weight: 300;
}

.font-normal {
  font-weight: 400;
}

.font-medium {
  font-weight: 500;
}

.font-semibold {
  font-weight: 600;
}

.font-bold {
  font-weight: 700;
}

/* 间距 */
.mt-xs { margin-top: var(--spacing-xs); }
.mt-sm { margin-top: var(--spacing-sm); }
.mt-md { margin-top: var(--spacing-md); }
.mt-lg { margin-top: var(--spacing-lg); }
.mt-xl { margin-top: var(--spacing-xl); }

.mb-xs { margin-bottom: var(--spacing-xs); }
.mb-sm { margin-bottom: var(--spacing-sm); }
.mb-md { margin-bottom: var(--spacing-md); }
.mb-lg { margin-bottom: var(--spacing-lg); }
.mb-xl { margin-bottom: var(--spacing-xl); }

.ml-xs { margin-left: var(--spacing-xs); }
.ml-sm { margin-left: var(--spacing-sm); }
.ml-md { margin-left: var(--spacing-md); }
.ml-lg { margin-left: var(--spacing-lg); }

.mr-xs { margin-right: var(--spacing-xs); }
.mr-sm { margin-right: var(--spacing-sm); }
.mr-md { margin-right: var(--spacing-md); }
.mr-lg { margin-right: var(--spacing-lg); }

.pt-sm { padding-top: var(--spacing-sm); }
.pt-md { padding-top: var(--spacing-md); }
.pt-lg { padding-top: var(--spacing-lg); }

.pb-sm { padding-bottom: var(--spacing-sm); }
.pb-md { padding-bottom: var(--spacing-md); }
.pb-lg { padding-bottom: var(--spacing-lg); }

/* 动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.6;
  }
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 0 20px rgba(167, 139, 250, 0.3);
  }
  50% {
    box-shadow: 0 0 40px rgba(167, 139, 250, 0.6);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

.pulse {
  animation: pulse 2s ease-in-out infinite;
}

.glow-animation {
  animation: glow 2s ease-in-out infinite;
}
